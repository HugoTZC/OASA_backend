# ==========================================
# OASA Backend - Production Environment (Render)
# ==========================================
# Configure these variables in Render's environment settings

# Server Configuration
PORT=3001
NODE_ENV=production

# CRITICAL: Set this to your exact Vercel URL (no trailing slash)
FRONTEND_URL=https://your-vercel-app-name.vercel.app

# Database Configuration (Render PostgreSQL)
# Get these from your Render PostgreSQL instance
DATABASE_URL=postgresql://user:password@host:port/database

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Features
DEFAULT_SUBSCRIPTION_PLAN=basic

# Additional Production Settings
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Debug (remove in final production)
DEBUG_CORS=false
